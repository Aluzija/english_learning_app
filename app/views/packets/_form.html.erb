    <%= f.label :name, "nazwa paczki" %>
    <%= @packet.error(:name) %>
    <%= f.text_field :name %>
    <%= f.submit "dodaj paczkÄ™" %>
    <%= link_to "Anuluj", "#", onclick: "hide_form(#{"packet_form"})", class: "show_or_hide_form" %>
